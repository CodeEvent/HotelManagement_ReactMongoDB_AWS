<!-- Main site -->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <a href="/add_guest" class="border-shadow">
                <span class="text-gradient">Add new guest <i class="fa-solid fa-user-plus"></i></span>
            </a>
        </div>

        <!-- form handling -->
        <form action="/" method=""POST>
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Gender</th>
                        <th>Status</th>
                        <th>Action</th>
                        <th>Checked in</th>
                    </tr>
                </thead>
                <tbody>
                    <%- include('include/_show')%>
                </tbody>
            </table>
        </form>
    </div>
</main>
<!-- /Main site -->


